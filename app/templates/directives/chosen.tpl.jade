div.th-chosen
	span.caret(ng-class="{'active' : showmenu}")

	ul.selected
		li( ng-repeat="s in selected" )
			span( ng-bind="s.name" )
			span.glyphicon.glyphicon-remove( ng-click="unselect( $index, $event )" )


	div.options( ng-show="showmenu" )
		div.input-group
			span.input-group-addon
				span.glyphicon.glyphicon-search
			input.form-control.filter(
				type="text",
				placeholder="filter",
				ng-model="searchText",
				ng-click="prevent($event)"
			)
			span.input-group-btn
				button.btn.btn-default(
					type="button",
					ng-click="clear( $event )",
					ng-class="{ 'disabled' : searchText == ''}"
				)
					span.glyphicon.glyphicon-remove
		ul
			li( ng-repeat="o in options | filter:searchText", ng-click="select( $index, $event )" )
				span( ng-bind="o.name" )

		div.input-group
			div.input-group-btn
				button.btn.btn-default.dropdown-toggle(
					type="button",
					data-toggle="dropdown",
					ng-click="dropdown($event)"
				)
					span group&nbsp;
					span.caret
				ul.dropdown-menu
					li group 1
					li group 2
					li group 3

			input.form-control(
				type="text",
				placeholder="add element",
				ng-click="prevent($event)",
				ng-model="newElement"
			)
			span.input-group-btn
				button.btn.btn-default(
					type="button",
					ng-click="add( $event )",
					ng-class="{ 'disabled' : newElement == ''}"
				)
					span.glyphicon.glyphicon-plus

