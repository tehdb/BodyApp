	body(
			ng-app="BodyApp"
			ng-controller="MainController"
			ng-cloak
	)

		header.navbar.navbar-default.navbar-fixed-top( role="navigation" )
			div.container
				div.navbar-header
					a.navbar-brand(href="#")
						i.fa.fa-home
						span Home
					button.btn.btn-default.navbar-toggle(role="button", ng-click="toggleSidebar()")
						i.fa.fa-bars

				div.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a.icon-btn( href="/#/exercises" )
								i.fa.fa-bars
								span Exercises

						li
							a.icon-btn( href="/#/muscles" )
								i.fa.fa-male
								span Muscles

						li
							a.icon-btn( href="/#/schedules" )
								i.fa.fa-tasks
								span Schedules

						li
							a.icon-btn( href="/#/features" )
								i.fa.fa-cogs
								span Features

		div.sidebar(ng-click="toggleSidebar(false)", ng-class="{ 'sidebar-show' : sidebarShow}")
			ul.list-group
				a.list-group-item( href="/#/exercises" )
					i.fa.fa-bars
					span Exercises

				a.list-group-item( href="/#/muscles" )
					i.fa.fa-male
					span Muscles

				a.list-group-item( href="/#/schedules" )
					i.fa.fa-tasks
					span Schedules

				a.list-group-item( href="/#/features" )
					i.fa.fa-cogs
					span Features


		div.content
				div.container.ng-view

