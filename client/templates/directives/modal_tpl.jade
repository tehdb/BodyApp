div.th-modal(
	class="ng-hide"
	ng-hide="!show"
)
	div.th-modal-content
		div.th-modal-head
			h5.pull-left(ng-bind="title")
			button.btn.icon-btn.pull-right(
				type="button"
				ng-click="cancel($event)"
			)
				i.fa.fa-times

		div.th-modal-body( ng-transclude )

		div.th-modal-foot(ng-show="data.confirmable")
			button.btn.btn-danger.icon-left.cancel-btn(
				type="button"
				ng-click="cancel($event)"
			)
				i.fa.fa-times
				span cancel

			button.btn.btn-success.icon-right.apply-btn(
				type="button"
				ng-click="apply($event)"
			)
				span apply
				i.fa.fa-check
